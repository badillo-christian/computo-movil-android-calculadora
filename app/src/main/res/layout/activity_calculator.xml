<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:padding="10dp">

        <TextView

            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="70dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/btn_history"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/historybutton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="7">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/ac"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@drawable/actionbutton"
                android:textColor="@color/actiontextcolor"
                android:text="AC"
                android:textSize="@dimen/buttontextsize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/pm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/pm"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@drawable/actionbutton"
                android:textColor="@color/actiontextcolor"
                android:text="+/-"
                android:textSize="@dimen/buttontextsize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/percentage"
                app:layout_constraintStart_toEndOf="@+id/ac"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/percentage"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@drawable/actionbutton"
                android:textColor="@color/actiontextcolor"
                android:text="%"
                android:textSize="@dimen/buttontextsize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/divide"
                app:layout_constraintStart_toEndOf="@+id/pm"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/divide"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@drawable/mathbutton"
                android:text="/"
                android:textSize="@dimen/buttontextsize"
                android:textColor="@color/mathtextcolor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/percentage"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/n7"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@drawable/numberbutton"
                android:textColor="@color/numbertextcolor"
                android:text="7"
                android:textSize="@dimen/buttontextsize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/n8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/n8"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@drawable/numberbutton"
                android:textColor="@color/numbertextcolor"
                android:text="8"
                android:textSize="@dimen/buttontextsize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/n9"
                app:layout_constraintStart_toEndOf="@+id/n7"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/n9"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@drawable/numberbutton"
                android:textColor="@color/numbertextcolor"
                android:text="9"
                android:textSize="@dimen/buttontextsize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/multiply"
                app:layout_constraintStart_toEndOf="@+id/n8"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/multiply"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@drawable/mathbutton"
                android:text="*"
                android:textSize="@dimen/buttontextsize"
                android:textColor="@color/mathtextcolor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/n9"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/n4"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@drawable/numberbutton"
                android:textColor="@color/numbertextcolor"
                android:text="4"
                android:textSize="@dimen/buttontextsize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/n5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/n5"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@drawable/numberbutton"
                android:textColor="@color/numbertextcolor"
                android:text="5"
                android:textSize="@dimen/buttontextsize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/n6"
                app:layout_constraintStart_toEndOf="@+id/n4"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/n6"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@drawable/numberbutton"
                android:textColor="@color/numbertextcolor"
                android:text="6"
                android:textSize="@dimen/buttontextsize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/minus"
                app:layout_constraintStart_toEndOf="@+id/n5"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/minus"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@drawable/mathbutton"
                android:text="-"
                android:textSize="@dimen/buttontextsize"
                android:textColor="@color/mathtextcolor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/n6"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/n1"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@drawable/numberbutton"
                android:textColor="@color/numbertextcolor"
                android:text="1"
                android:textSize="@dimen/buttontextsize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/n2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/n2"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@drawable/numberbutton"
                android:textColor="@color/numbertextcolor"
                android:text="2"
                android:textSize="@dimen/buttontextsize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/n3"
                app:layout_constraintStart_toEndOf="@+id/n1"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/n3"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@drawable/numberbutton"
                android:textColor="@color/numbertextcolor"
                android:text="3"
                android:textSize="@dimen/buttontextsize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/plus"
                app:layout_constraintStart_toEndOf="@+id/n2"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/plus"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@drawable/mathbutton"
                android:text="+"
                android:textSize="@dimen/buttontextsize"
                android:textColor="@color/mathtextcolor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/n3"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/n0"
                android:layout_width="@dimen/zerobuttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@drawable/numberbutton"
                android:textColor="@color/numbertextcolor"
                android:paddingLeft="20dp"
                android:gravity="left|center_vertical"
                android:text="0"
                android:textSize="@dimen/buttontextsize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/decimal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/decimal"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@drawable/numberbutton"
                android:textColor="@color/numbertextcolor"
                android:text="."
                android:textSize="@dimen/buttontextsize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/equal"
                app:layout_constraintStart_toEndOf="@+id/n0"
                app:layout_constraintTop_toTopOf="parent" />



            <Button
                android:id="@+id/equal"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@drawable/mathbutton"
                android:text="="
                android:textSize="@dimen/buttontextsize"
                android:textColor="@color/mathtextcolor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/decimal"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/history_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:visibility="gone">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</LinearLayout>